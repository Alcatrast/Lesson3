<Window x:Class="ButtonRunning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonRunning"
        mc:Ignorable="d"
        Title="MMM Нажми на кнопку и получи 100тыщ" Height="450" Width="800">
    <Grid Background="YellowGreen"> <!--Главное xранилище всех элементов--> 

        <Grid.ColumnDefinitions> <!--Создаем поле определение колонок--> 
            <ColumnDefinition Width="1.3*"/> <!--Создаем первую колонку--> 
            <ColumnDefinition Width="1*"/>  <!--вторую-->
            <ColumnDefinition Width="1*"/> <!--третью-->
        </Grid.ColumnDefinitions> <!--конец поля созжания колонок-->

        <Button Content="Я здесь!!"           Grid.Column="0" Margin="20,20,10,20" Background="Crimson"     FontSize="40" FontFamily="3ds"                        MouseEnter="Button_MouseEnter"/> <!--Создаем 3 кнопки-->
        <Button Content="Вообще то я здесь!!" Grid.Column="1" Margin="10,20,10,20" Background="DeepSkyBlue" FontSize="25" FontStyle="Oblique" Visibility="Hidden" MouseEnter="Button_MouseEnter"/> <!--Присваиваем им ОДНО и то же событие на клик-->
        <Button Content="Я обманула, я тут!!" Grid.Column="2" Margin="10,20,20,20" Background="White"       FontSize="18" FontStyle="Italic"  Visibility="Hidden" MouseEnter="Button_MouseEnter"/> <!--И распихиваем мх по нашим колонкам-->
  
    </Grid> 
</Window>
